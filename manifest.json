{
  "name": "TL;DL - WhatsApp Voice Transcriber",
  "short_name": "TL;DL",
  "version": "1.0.0",
  "description": "Too Long; Didn't Listen. Transcribe and summarize WhatsApp voice messages instantly.",
  "manifest_version": 3,
  "action": {
    "default_title": "Open WhatsApp Transcriber",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "64": "assets/icons/icon64.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "64": "assets/icons/icon64.png",
    "128": "assets/icons/icon128.png"
  },
  "side_panel": {
    "default_path": "src/pages/sidepanel/index.html"
  },
  "background": {
    "service_worker": "src/bg/background.js"
  },
  "content_scripts": [
    {
      "run_at": "document_idle",
      "js": [
        "src/content/after.js"
      ],
      "matches": [
        "https://web.whatsapp.com/*"
      ]
    }
  ],
  "permissions": [
    "sidePanel",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/inject.js"
      ],
      "matches": [
        "https://web.whatsapp.com/*"
      ]
    }
  ]
}